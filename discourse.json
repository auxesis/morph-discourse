{
  "variables": {
    "digital_ocean_api_key": "{{env `DO_API_KEY`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "scripts": [ "shell/setup.sh" ]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/discourse.yml"
    }
  ],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{ user `digital_ocean_api_key` }}",
      "image": "ubuntu-16-04-x64",
      "region": "sfo1",
      "size": "1024mb",
      "ssh_username": "root"
    }
  ]
}
